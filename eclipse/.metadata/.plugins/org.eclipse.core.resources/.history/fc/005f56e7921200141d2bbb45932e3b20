package com.gough.learningtomod.init;

import net.minecraft.init.Blocks;
import net.minecraft.init.Items;
import net.minecraft.item.ItemStack;
import cpw.mods.fml.common.registry.GameRegistry;

public class Recipes {

	public static void init(){
		//Shaped recipe
		GameRegistry.addRecipe(new ItemStack(ModItems.itemCursor)," s ","sss", " s ",'s', new ItemStack(Items.stick));
		GameRegistry.addShapelessRecipe(new ItemStack(ModBlocks.letterC), new ItemStack(Blocks.wool),new ItemStack(Blocks.wool),new ItemStack(Blocks.wool),new ItemStack(Blocks.wool),new ItemStack(Blocks.wool));
	}
	
}
